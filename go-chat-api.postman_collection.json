			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse the JSON response\r",
							"let response = pm.response.json();\r",
							"\r",
							"// Extract token (adjust key if needed)\r",
							"let token = response.token\r",
							"\r",
							"// Ensure token exists\r",
							"if (!token) {\r",
							"    pm.test(\"Token is present\", function () {\r",
							"        pm.expect.fail(\"No token found in login response\");\r",
							"    });\r",
							"} else {\r",
							"    // Save token to environment variable\r",
							"    pm.globals.set(\"token\", token);\r",
							"\r",
							"    pm.test(\"Saved token to environment\", function () {\r",
							"        pm.expect(token).to.be.a(\"string\");\r",
							"    });\r",
							"\r",
							"    console.log(\"Token saved:\", token);\r",
							"}"
						],
